<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team10.mapper.AccountMapper">
    <resultMap id="BaseResultMap" type="com.team10.entity.Account">
        <result column="accountNo" property="accountNo"/>
        <result column="balance" property="balance"/>
    </resultMap>
    <select id="detail" resultMap="BaseResultMap">
        select * from account
        <include refid="AccountFindCriteria"></include>
        limit 1
    </select>
    <insert id="create">
        insert into account(accountNo,balance)
        values (#{accountNo},#{balance})
    </insert>
    <update id="update">
        update account
        <set>
            <if test="balance != null and balance != ''">
                balance = #{balance},
            </if>
        </set>
        where accountNo = #{accountNo}
    </update>
    <sql id="AccountFindCriteria">
        <where>
            <if test="accountNo !=null and accountNo !=''">and accountNo = #{accountNo}</if>
            <if test="balance !=null and balance !=''">and balance = #{balance}</if>
        </where>
    </sql>
</mapper>